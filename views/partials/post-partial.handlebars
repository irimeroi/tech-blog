<div id="each-post">
    <h3>
        <a href="/post/{{id}}">{{title}}</a>
    </h3>
    <p><em>Created by {{user.username}} on {{format_date date}}</em></p>
    <p>{{description}}</p>

    <input type="hidden" id="post_id" value="{{id}}" />
    <textarea id="comment-textarea-{{id}}" data-description="{{id}}" placeholder="Leave a comment here"></textarea>
    <button id="comment-button-{{id}}" class="comment-button">Submit</button>

    {{#each comments}}
    <div class="comment-box">
        <p class="commenter">{{user.username}}</p>
        <p class="date">{{format_date date}}</p>
        <p class="comment">{{commenttext}}</p>
    </div>
    {{/each}}
</div>